<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">



    <TextView
        android:id="@+id/tvToMapPage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMap"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="@string/app_map"/>

    <TextView
        android:id="@+id/tvToSettingPage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorSetting"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="@string/app_setting"/>

    <TextView
        android:id="@+id/tvToCollectionPage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorCollection"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="@string/app_search"/>



</LinearLayout>